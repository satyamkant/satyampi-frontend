{
   "compilerOptions": {
    "jsx": "react-jsx", // or "react" for React 17
    "allowJs": false, // Disable .js/.jsx files if all are converted
    "checkJs": false,
    "strict": true, // Recommended for TypeScript
    "noImplicitAny": true, // Enforce typing for better type safety
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true
  },
  "include": ["src"],
}
